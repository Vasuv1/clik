{
  "name": "admin-clik",
  "version": "1.0.0",
  "type": "module",
  "description": "Admin Clik Mobile App",
  "scripts": {
    "dev:server": "node --watch ./full/server/index.js",
    "dev": "node --watch ./full/server/index.js",
    "prebuild": "npm install -g esbuild && pwd && ls -la && mkdir -p build && cp -r ./full/server/* ./build/ || (cd full && cp -r server/* ../build/)",
    "build": "ls -la && cd build && esbuild index.js --platform=node --bundle --external:express --external:mongoose --external:cors --external:dotenv --external:express-session --external:memorystore --format=esm --outdir=../dist --allow-overwrite",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "memorystore": "^1.6.7",
    "mongoose": "^8.12.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
